<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ToolBar主题-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--toolbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--手机最上方通知栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--toolbar里文本颜色-->
        <item name="android:textColorPrimary">@color/color_white</item>
    </style>

    <!--侧滑菜单主题-->
    <style name="SideMenuTheme" parent="Widget.Design.NavigationView">
        <item name="android:textColor">@color/common_black_text</item>
        <item name="android:textSize">16sp</item>

    </style>

    <!--我的音乐ItemView-->
    <declare-styleable name="MyMusicItemView">
        <attr name="item_icon" format="integer|reference"/>
        <attr name="item_desc" format="reference|string"/>
        <attr name="item_name" format="reference|string"/>
        <attr name="item_icon_color" format="reference|color"/>
    </declare-styleable>

</resources>
