<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ToolBar主题-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--toolbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--手机最上方通知栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--toolbar里文本颜色-->
        <item name="android:textColorPrimary">@color/color_white</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--侧滑菜单主题-->
    <style name="SideMenuTheme" parent="Widget.Design.NavigationView">
        <item name="android:textColor">@color/common_black_text</item>
        <item name="android:textSize">16sp</item>

    </style>

    <!--我的音乐ItemView-->
    <declare-styleable name="MyMusicItemView">
        <attr name="item_icon" format="integer|reference"/>
        <attr name="item_desc" format="reference|string"/>
        <attr name="item_name" format="reference|string"/>
        <attr name="item_icon_color" format="reference|color"/>
    </declare-styleable>

    <!--我音歌单-->
    <style name="RadioButtonSongListStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/radio_button_text_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>

    </style>

    <!--通用分割线-->
    <style name="CommonLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/Grey400</item>
    </style>

    <!--发现页标签-->
    <style name="DiscoverTagTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/common_black_text</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="CollapsedTitleTextStyle">
        <item name="android:textColor">@color/common_white_text</item>
    </style>

    <style name="ExpandedTitleTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/common_white_text</item>
    </style>

</resources>
