<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.youth.banner.Banner
                    android:layout_marginTop="8dp"
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>

            <LinearLayout
                    android:paddingBottom="10dp"
                    android:padding="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:src="@drawable/ic_hot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            style="@style/DiscoverTagTextStyle"
                            android:text="@string/recommend_song"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:src="@drawable/ic_hot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            style="@style/DiscoverTagTextStyle"
                            android:text="@string/hot_singer"/>

                </LinearLayout>


                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:src="@drawable/ic_supervisor_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            style="@style/DiscoverTagTextStyle"
                            android:text="@string/recommend_song"/>

                </LinearLayout>


                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:src="@drawable/ic_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            style="@style/DiscoverTagTextStyle"
                            android:text="@string/recommend_song"/>

                </LinearLayout>

            </LinearLayout>
            <View
                    android:background="@color/color_f2f2f2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"/>
            <!--热门歌手-->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                    <TextView
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:text="@string/hot_singer"
                            android:textColor="@color/common_black_text"
                            android:textSize="@dimen/common_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:text="@string/look_all"
                            android:textColor="@color/common_black_text"
                            android:textSize="@dimen/common_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:focusable="false"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/rv_hot_singer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                    android:background="@color/color_f2f2f2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"/>

            <!--推荐歌单-->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                    <TextView
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:text="@string/recommend_song_list"
                            android:textColor="@color/common_black_text"
                            android:textSize="@dimen/common_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:text="@string/song_list_square"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/common_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView

                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_navigate_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginBottom="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/rv_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>