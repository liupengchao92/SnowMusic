<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="36dp"
             android:layout_height="36dp">


    <ImageView
            android:id="@+id/playPauseIv"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_grey"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <com.king.view.circleprogressview.CircleProgressView
            android:id="@+id/progressBar"
            app:cpvProgressColor="@color/Grey600"
            app:cpvNormalColor="@color/Grey300"
            app:cpvCirclePadding="0dp"
            app:cpvStrokeWidth="2dp"
            app:cpvShowLabel="false"
            app:cpvShowTick="false"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</FrameLayout>