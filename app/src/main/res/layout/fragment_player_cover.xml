<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/qualityTv"
                android:background="@drawable/shape_music_label"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:textColor="@color/color_white"
                android:textSize="12dp"
                android:text="@string/sound_quality_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:id="@+id/typeDescTv"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_music_label"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/color_white"
                android:textSize="12dp"
                android:text="@string/res_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/soundEffectTv"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_music_label"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:textColor="@color/color_white"
                android:textSize="12dp"
                android:text="@string/sound_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <FrameLayout
            android:padding="4dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/shape_cover_bg"
            android:layout_width="225dp"
            android:layout_height="225dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                app:civ_border_color="@color/Grey900"
                app:civ_border_width="42dp"
                android:id="@+id/iv_cover"
                android:src="@drawable/default_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>